{
	"name": "cclog",
	"version": "0.0.1",
	"description": "Sync Claude Code transcripts to SQLite",
	"type": "module",
	"bin": {
		"cclog": "./src/index.ts"
	},
	"scripts": {
		"dev": "bun src/index.ts",
		"start": "bun src/index.ts",
		"build": "bun build --compile src/index.ts --outfile cclog",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "bun run --bun tsc --noEmit",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "git tag v$(jq -r .version package.json) && git push && git push --tags"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@types/bun": "latest",
		"prettier": "^3.8.1",
		"typescript": "^5.9.3"
	},
	"files": [
		"src"
	],
	"keywords": [
		"claude",
		"claude-code",
		"analytics",
		"sqlite"
	],
	"license": "MIT"
}
